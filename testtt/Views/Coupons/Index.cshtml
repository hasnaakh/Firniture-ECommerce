@model IEnumerable<Coupon>

<h2>Manage Coupons</h2>

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<style>
    /* توسيط المحتوى داخل العمود */
    .content {
        display: flex;
        justify-content: center; /* توسيط المحتوى أفقيًا */
        align-items: center; /* توسيط المحتوى عموديًا */
    }
</style>

<div class="container mt-4">
    <div class="row content d-flex justify-content-center justify-content-between">
        <table class="table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Discount Amount</th>
                    <th>Expiry Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coupon in Model)
                {
                    <tr>
                        <td>@coupon.Code</td>
                        <td>@coupon.DiscountAmount</td>
                        <td>@coupon.ExpiryDate</td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@coupon.Id">Edit</a> 
                            <form method="post" asp-action="Delete" asp-route-id="@coupon.Id" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-success" asp-action="Create">Create New Coupon</a>
    </div>
</div>
