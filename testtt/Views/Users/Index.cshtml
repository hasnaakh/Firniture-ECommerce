@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<style>
    /* توسيط المحتوى داخل العمود */
    .content {
        display: flex;
        justify-content: center; /* توسيط المحتوى أفقيًا */
        align-items: center; /* توسيط المحتوى عموديًا */
    }
</style>

<div class="container mt-4">
    <div class="row content d-flex justify-content-center justify-content-between">
        <table class="table table-striped mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th>First Name</th>
                    <th>Last Name</th>
            
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(" , ", user.Roles.ToList())</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    </div>
</div>