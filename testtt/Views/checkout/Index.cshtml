@section Scripts {
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>
		$(document).ready(function () {
			$("#button-addon2").click(function (e) {
				e.preventDefault();
				applyCoupon();
			});

			function applyCoupon() {
				var couponCode = $("#c_code").val();
				$.ajax({
					type: "POST",
					url: '@Url.Action("ApplyCoupon", "Checkout")',
					data: { couponCode: couponCode },
					success: function (response) {
						if (response.success) {
							// تحديث النص ليكون جريء وبالأرقام العشرية
							$("#orderTotal1").html('<strong>$' + response.total.toFixed(2) + '</strong>');
							$("#couponAlert").show().find("#newTotal").text('$' + response.total.toFixed(2));
						} else {
							alert("Invalid coupon code.");
						}
					},
					error: function (xhr, textStatus, errorThrown) {
						console.log("Error: " + errorThrown);
					}
				});
			}
		});
	</script>
}



