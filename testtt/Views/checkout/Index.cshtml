											<div id="visaFields" style="display: none;">
												<div class="form-group row">
													<div class="col-md-12">
														<label for="c_companyname" class="text-black">Card Name <span class="text-danger">*</span></label>
														<input type="text" id="c_companyname" class="form-control" pattern="[a-zA-Z]+" title="Please enter alphabetic characters only">
													</div>

												</div>

												<div class="form-group row">
													<div class="col-md-6">
														<label for="c_end_date" class="text-black">End Date <span class="text-danger">*</span></label>
														<input type="date" id="c_end_date" class="form-control" min="{{ DateTime.Now.ToString("yyyy-MM-dd") }}">
													</div>
													<div class="col-md-6">
														<label for="c_security_code" class="text-black">Security Code <span class="text-danger">*</span></label>
