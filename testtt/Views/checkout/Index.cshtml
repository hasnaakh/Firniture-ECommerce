	<script>
		document.addEventListener("DOMContentLoaded", function () {
			var today = new Date().toISOString().split('T')[0];
			document.getElementById('c_end_date').setAttribute('min', today);

			var paymentMethodElements = document.getElementsByName('PaymentMethod');
			var visaFields = document.getElementById('visaFields');
			var cardFields = ['c_companyname', 'c_end_date', 'c_security_code', 'c_address'];

			function updateRequiredAttributes() {
				var selectedPaymentMethod = document.querySelector('input[name="PaymentMethod"]:checked').value;
				var isVisa = selectedPaymentMethod === 'Visa';
				cardFields.forEach(function (id) {
					var field = document.getElementById(id);
					if (isVisa) {
						field.setAttribute('required', 'required', 'required', 'required');
					} else {
						field.removeAttribute('required');
					}
				});
				visaFields.style.display = isVisa ? 'block' : 'none';
			}


			paymentMethodElements.forEach(function (element) {
				element.addEventListener('change', updateRequiredAttributes);
			});

			// Initial check on page load
			if (document.querySelector('input[name="PaymentMethod"]:checked')) {
				updateRequiredAttributes();
			}
		});
	</script>
</body>
