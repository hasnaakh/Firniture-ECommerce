@model testtt.Models.Order

@{
    ViewData["Title"] = "Change Order Status";
}

<h1>Change Order Status</h1>

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<style>
    /* توسيط المحتوى داخل العمود */
    .content {
        display: flex;
        justify-content: center; /* توسيط المحتوى أفقيًا */
        align-items: center; /* توسيط المحتوى عموديًا */
    }
</style>

<div class="container mt-4">
    <div class="row content d-flex justify-content-center justify-content-between">
        <form asp-action="ChangeStatus" method="post">
            <input type="hidden" name="orderId" value="@Model.Order_ID" />
            <div class="form-group">
                <label for="status">Order Status</label>
                <select class="form-control" id="status" name="status">
                    <option value="Pending" >Pending</option>
                    <option value="Processing">Processing</option>
                    <option value="Shipping" >Shipping</option>
                    <option value="Delivered" >Delivered</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Change Status</button>
        </form>
    </div>
</div>
